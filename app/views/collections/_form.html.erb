<%= simple_form_for(@collection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label=>'Namn' %>
    <%= f.input :comment, :label=>'Kommentar', :as=>:text, :input_html => { 'rows' => 5, 'cols' => 40 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
