<h1>Nyheter</h1>

<table>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td>
          <p>
            <h2><%= news.header %></h2>
          </p>
           <p>
            <%= image_tag news.image.thumb.to_s %>
          </p>
          <p>
            <%= news.body %>
          </p>
          <% if user_signed_in? %>
            <p>
              <%= link_to 'Ändra', edit_news_path(news) %>
              <%= link_to 'Ta bort', news, method: :delete, data: { confirm: 'Är du säker?' } %>
            <p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Lägg till', new_news_path %>
<% end %>