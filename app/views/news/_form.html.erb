<% unless @news.image.blank?%><%= image_tag @news.image_url.to_s %><% end %>
<%= simple_form_for(@news) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :header, :label=>'Rubrik' %>
    <%= f.input :body, as: :text, :label=>'Text', :input_html => {:rows=>10, :columns=>10} %>
    <%= f.file_field :image, :label=>'Bild' %>
  </div>

   <div class="form-actions">
    <%= button_to 'Avbryt', news_index_path, :class=>'btn' %>
    <%= f.submit 'Spara', :class=>'btn btn-primary' %>	
  </div>
<% end %>

<% # jquery upload template # %>
<script id="template-upload" type="text/x-tmpl"><div class="upload">{%=o.name%}<div class="progress"><div class="bar" style="width: 0%"></div></div></div></script>
