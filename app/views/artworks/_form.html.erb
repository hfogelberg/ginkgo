<% unless @artwork.image.blank?%><%= image_tag @artwork.image_url.to_s %><% end %>
<%= simple_form_for @artwork, :html => {:multipart => true}  do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, :label=>'Namn' %>
    <%= f.input :header, :label=>'Ingress', :input_html => {:rows=>3} %>
    <%= f.input :description, :label=>'Beskrivning', :input_html => {:rows=>10} %>
    <%= f.input :height, :label=>'Höjd', :as=>:string %>
    <%= f.input :width, :label=>'Bredd', :as=>:string %>
    <%= f.input :depth, :label=>'Djup', :as=>:string %>
    <%= f.association :Status, :label=>'Status' %>
    <%= f.association :Gallery, :label=>'Galleri' %>
    <%= f.association :Technique, :label=>'Teknik' %>
    <%= f.file_field :image, :label=>'Fil' %>
  </div>

   <div class="form-actions">
    <%= button_to 'Åter', galleries_path, :class=>'btn btn-primary' %>
    <%= f.submit 'Spara', :class=>'btn btn-primary' %>
  </div>
<% end %>

<% # jquery upload template # %>
<script id="template-upload" type="text/x-tmpl"><div class="upload">{%=o.name%}<div class="progress"><div class="bar" style="width: 0%"></div></div></div></script>
